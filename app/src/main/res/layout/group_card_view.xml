<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_margin="10dp"
    android:layout_height="200dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/download"
            android:scaleType="fitXY"
            android:id="@+id/group_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:focusable="true"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll1"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/black_gradient_box"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginStart="20dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

                <TextView
                    android:layout_marginStart="12dp"
                    android:text="I am a disco dancer"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <TextView
                android:paddingStart="10dp"
                android:paddingEnd="20dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_public"
                android:id="@+id/ll2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ll3"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/black_gradient_box"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="4dp"
                    android:text="Public group"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"/>


            <TextView
                android:paddingEnd="20dp"
                android:paddingStart="10dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_write_icon"
                android:id="@+id/ll3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ll4"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/black_gradient_box"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="4dp"
                android:text="20k"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>


            <TextView
                android:elevation="4dp"
                android:paddingEnd="20dp"
                android:paddingStart="10dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_clock"
                android:id="@+id/ll4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/black_gradient_box"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="4dp"
                android:text="1 year"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>


        </RelativeLayout>

    </FrameLayout>


</androidx.cardview.widget.CardView>